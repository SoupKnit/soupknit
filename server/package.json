{
  "name": "server",
  "version": "4.1.0",
  "description": "Soupknit Server",
  "scripts": {
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "dev": "cross-env NODE_ENV=development tsc --watch --preserveWatchOutput --pretty & nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js"
  },
  "author": "Chaitanya Bhagwat <chait@chaitb.xyz>",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "fastify": "^4.28.1",
    "zod": "3.23.8",
    "@soupknit/model": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "fastify-tsconfig": "^2.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
